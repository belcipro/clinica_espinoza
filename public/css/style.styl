@import 'nib'
vendor-prefixes=o ms moz webkit
$colorPrimary=#65AAF0
$colorSecundary=#008EAF
.leyendaContainer{
    background: rgba(0, 0, 0, 0.24);
    padding: 10px 18px;
    border-radius:10px;
    display: flex
    width: 100%
    margin: 20px 0
}
.leyendaContainer h3{
    color:#fff;
    text-align: center;
    margin: 0;
    padding: 0;
}
.leyendaColor{
    border-radius: 10px;
    text-align: center;
    padding: 5px;
    color: #fff;
    margin:10px;
    width: 100%
}
.colorPendiente{
    background: #FDD981;
}
.colorReservado{
    background: #2EB598;
}
.colorAnulado{
    background: #D47676;
}
.colorOtros{
    background: #8CDCFF;
}
.colorFeriado{
    background: #757575;
}
.RadioContent
    padding-left 10px
    min-width 100%
    max-height 100px
    margin-right 10px
    label
        padding-right 14px
        position relative
        color #9b9b9b
        input
            visibility hidden
        span
            position absolute
            top -2px
            left -20px
            margin-left 0
            &:before
                content ''
                border 1px solid #9b9b9b
                border-radius 50%
                margin-right 35px
                background-color none
                width 25px
                height 25px
                display inline-block
        .iconCheck
            position absolute
            display: none
            left -15px
            top 4px
            color: #fff
    .checked
        span
            &:before
                border 1px solid $colorPrimary
                background-color $colorPrimary
                border-radius 50%
        .iconCheck
            display: block